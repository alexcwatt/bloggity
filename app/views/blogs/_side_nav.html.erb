<%# Renders list of most recent blogs
# -params-
-%>
<div id="side_nav_container" style="padding:5px 10px;">
	<h4 class="subtitle">Recent Posts</h4>
	<ul class="blog_list">
	<% if @blogs.empty? %>
		<li>None</li>
	<% else %>
		<% for blog in @blogs %>
			<li><%= link_to blog.title, blog_named_link(blog) %></li>
		<% end %>
	<% end %>
	</ul>
	<% if @blogs && @blogs.total_pages > 1 -%>
		<div style="padding-bottom:4px;">More pages</div> <%= will_paginate(@blogs, {:form_name => :blog_show_params, :param_name => :page} ) -%>
		<% end %>
	<h4 class="subtitle">Other Choices</h4>
	<div style="margin-top:4px"><%= link_to "#{image_tag "bloggity/feed-icon.png"} Subscribe to feed", { :action => :feed }, :style => 'text-decoration:none' %></div>
</div>
		
