<h1>New blog_category</h1>

<% form_for(@blog_category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.select :parent_id, BlogCategory.find(:all, :conditions => { :parent_id => nil }).collect { |bc| [bc.name, bc.id] }.insert(0, ["None", nil]) %>
  </p>
  <p>
    <%= f.label :group_id %><br />
    <%= f.text_field :group_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', blog_categories_path %>
